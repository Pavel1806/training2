<Window x:Class="NetFrameworkWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetFrameworkWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="190*"/>
            <ColumnDefinition Width="255*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="FieldName" HorizontalAlignment="Left" Margin="55,70,0,0" TextWrapping="Wrap" Text="Введите свое имя" VerticalAlignment="Top"/>
        <TextBox x:Name="InputField" HorizontalAlignment="Left" Height="23" Margin="66,70,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <Button x:Name="Button" HorizontalAlignment="Left" Margin="157,125,0,0" VerticalAlignment="Top" Width="97" Height="20" Grid.ColumnSpan="2" Content="Нажмите" Click="Button_Click"/>
    </Grid>
</Window>
